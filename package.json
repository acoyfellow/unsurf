{
	"name": "unsurf",
	"version": "0.2.0",
	"description": "Turn any website into a typed API",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"bin": {
		"unsurf": "./dist/cli.js"
	},
	"files": ["dist", "src", "!src/cf-worker.ts"],
	"keywords": [
		"api",
		"openapi",
		"web-scraping",
		"browser-automation",
		"schema-inference",
		"effect",
		"cloudflare-workers",
		"mcp"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/acoyfellow/unsurf"
	},
	"homepage": "https://unsurf.coey.dev",
	"scripts": {
		"dev": "bun run alchemy.run.ts",
		"deploy": "bun run alchemy.run.ts",
		"build": "tsup",
		"prepublishOnly": "bun run check && bun run typecheck && bun run test && bun run build",
		"generate": "bunx drizzle-kit generate",
		"studio": "bunx drizzle-kit studio",
		"check": "bunx biome check .",
		"check:fix": "bunx biome check --write .",
		"typecheck": "tsc --noEmit",
		"test": "bun vitest run",
		"test:watch": "bun vitest",
		"lint": "bun run check && bun run typecheck"
	},
	"dependencies": {
		"@cloudflare/ai": "^1.2.2",
		"@cloudflare/puppeteer": "^1.0.6",
		"@effect/platform": "^0.94.3",
		"@effect/schema": "^0.75.5",
		"@modelcontextprotocol/sdk": "^1.26.0",
		"drizzle-orm": "^0.44.2",
		"effect": "^3.19.16"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@cloudflare/workers-types": "^4.20250129.0",
		"@effect/vitest": "^0.27.0",
		"@types/node": "^25.2.2",
		"alchemy": "^0.84.0",
		"drizzle-kit": "^0.30.5",
		"tsup": "^8.5.1",
		"typescript": "^5.7.3",
		"vitest": "^4.0.18"
	},
	"license": "MIT"
}
